    <Color x:Key="DisabledControlDarkColor">#FF3F3F3F</Color>
    <Color x:Key="DisabledForegroundColor">White</Color>

    <Color x:Key="SelectedBackgroundColor">White</Color>
    <Color x:Key="SelectedUnfocusedColor">White</Color>

    <Color x:Key="ControlLightColor">#222222</Color>
    <Color x:Key="ControlMediumColor">#222222</Color>
    <Color x:Key="ControlDarkColor">#222222</Color>

    <Color x:Key="ControlMouseOverColor">Gray</Color>
    <Color x:Key="ControlPressedColor">DarkGray</Color>

    <Color x:Key="GlyphColor">White</Color>
